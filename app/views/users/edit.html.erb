<h1>User info</h1>

  <%= form_with model:@user, local:true do |f| %>
    <div class="field">
      <label>Name</label>
      <%= f.text_field :name %>
      </div>
      <label>Introduction</label>
    <div class="field">
      <%= f.text_area :introduction %>
    </div>
    <div class="bubmit">
      <%= f.submit 'Update User' %>
    </div>
  <% end %>