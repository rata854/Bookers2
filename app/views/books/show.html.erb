<% if flash[:notice] %>
 <p id="notice">
  <%= flash[:notice] %>
 </p>
 <% else %>
 <p id="notice"></p> 
 <% end %>
 <div class='container px-5 px-sm-0'>
   <div class="error_explanation">
    <% if @book.errors.any? %>
    <h3>
     <%= @book.errors.count %> errors prohibited this obj from being saved:
     </h3>
      <ul><% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
      </ul>
      <% end %>
    </div>
   <div class='row'>
    <div class='col-md-3'>
     
 <h2>User info</h2>
    <table class='table'>
      <tr><%= attachment_image_tag @book2.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %></tr>
      <tr>
   	    <th>name</th>
   	    <th><%= @book2.user.name %></th>
      </tr>
      <tr>
      	 <th>introduction</th>
      	 <th><%= @book2.user.introduction %></th>
      </tr>
    </table>
    
      <%= link_to  edit_user_path(@book2.user), class: 'btn btn-outline-secondary btn-block' do %>
       <i class="fas fa-user-cog"></i>
      <% end %>
    
　 <h2>New book</h2>
    <%= form_with model:@book, local:true do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      </div>
    <% end %>
    </div>


 <div class='col-md-8 offset-md-1'>
 <h2>Book detail</h2>
  <table class='table'>
      <tr>
        <td>
          <%= link_to user_path(@book2.user) do %>
           <%= attachment_image_tag @book2.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
            <br>
           <%= @book2.user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(@book2.id) do %>
           <%= @book2.title %>
          <% end %>
        </td>
        <td><%= @book2.body %></td>
        <td>
         <% if @book2.user == current_user %>
           <%= link_to "Edit",  edit_book_path(@book2.id) , class: "btn btn-sm btn-success" %>
         <% end %>
        </td>
        <td>
         <% if @book2.user == current_user %>
          <%= link_to "Destroy", book_path(@book2.id), method: :delete, data: { confirm: '本当に消しますか？'}, class: "btn btn-sm btn-danger" %>
         <% end %>
        </td>
      </tr>
      <tr>
  </table>
   </div>
  </div>
 </div>