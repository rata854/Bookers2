 <p id="notice">You have created book successfully.</p>
  <div class='container px-5 px-sm-0'>
   <div class='row'>
    <div class='col-md-3'>
     
    <%= render 'users/list' %>
    
    </div>


 <div class='col-md-8 offset-md-1'>
 <h2>Book detail</h2>
  <table class='table'>
      <tr>
        <td>
          <%= link_to user_path(@user.id) do %>
           <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>
            <br>
           <%= @book.user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(@book.id) do %>
           <%= @book.title %>
          <% end %>
        </td>
        <td><%= @book.body %></td>
        <td>
         <% if @book.user == current_user %>
           <%= link_to "Edit",  edit_book_path(@book) , class: "btn btn-sm btn-success" %>
         <% end %>
        </td>
        <td>
         <% if @book.user == current_user %>
          <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger" %>
         <% end %>
        </td>
      </tr>
      <tr>
  </table>

  </div>
 </div>